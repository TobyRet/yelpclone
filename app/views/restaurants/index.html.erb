<h2>Restaurants Home</h2>
	<% if @restaurants.any? %>
		<% @restaurants.each do |restaurant| %>
			<div class = "restaurant_item">
				<div class="restaurant_title">
					<h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
				</div>
				<ul class="button-group">
					<li class = "restaurant_links"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></li	>
					<li class = "restaurant_links"><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?'	 } %></li>
					<li class = "restaurant_links"><%= link_to "Review", 		new_restaurant_review_path(restaurant) %></li>
					<li class="average_review"><% if restaurant.reviews.any? %>Rating:<% end %> <%= restaurant.average_score %></li>
				</ul>
			</div>
		<% end %>
	<% else %>
		No restaurants have been added yet
	<% end %>
<br>
<%= link_to 'Add a restaurant', new_restaurant_path, :class => "button" %>
